{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "module": "commonjs",
      "noImplicitAny": false,
      "strictNullChecks": false,
      "removeComments": true,
      "declaration": false,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib":[
        "dom",
        "dom.iterable"],
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
